package recordmanager.java;
import javax.swing.*;   
import java.awt.Font;
public class recordmanager {
JFrame frame;
JLabel label1,label2,label3;
JButton add,sort;
JTextField name,marks,subject;
	public recordmanager() {
		frame=new JFrame("new frame");
		add=new JButton("Add");
		sort=new JButton("Sort");
		name=new JTextField("Name");
		marks=new JTextField("Marks");
		subject=new JTextField("Subject");
		name.setBounds(400,100,150,50);
		marks.setBounds(600,100,150,50);
		subject.setBounds(800,100,150,50);
		add.setBounds(950,100,150,40);
		sort.setBounds(500,150,150,40);
		label1=new JLabel("Name");
		label2=new JLabel("RollNo");
		label3=new JLabel("Subject");
		label1.setBounds(400,300,100,200);
		label2.setBounds(650,300,100,200);
		label3.setBounds(900,300,100,200);
		 label1.setFont(new Font("Verdana", Font.PLAIN, 18));
		 label2.setFont(new Font("Verdana", Font.PLAIN, 18));
		 label3.setFont(new Font("Verdana", Font.PLAIN, 18));
		 
		//frame.add(button);
		frame.add(label1);
		frame.add(label2);
		frame.add(label3);
		frame.add(name);
		frame.add(marks);
		frame.add(subject);
		frame.add(add);
		frame.add(sort);
		frame.setExtendedState(JFrame.MAXIMIZED_BOTH); 
		frame.setUndecorated(true);
		frame.setLayout(null);
		frame.setVisible(true);
	}
public static void main(String args[])
{
	recordmanager start=new recordmanager();
}
}
