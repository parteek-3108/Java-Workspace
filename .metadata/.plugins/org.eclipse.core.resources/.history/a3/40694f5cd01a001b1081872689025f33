package recordmanager.java;
import java.util.*;
import java.awt.Color;
import java.awt.event.*;
import javax.swing.*;
import java.sql.*;
class record
{
	int marks;
	long rollno;
	String name,subject;
public record(int marks,long rollno,String name,String subject)
{
	this.marks=marks;
	this.rollno=rollno;
	this.name=name;
	this.subject=subject;
}
}
public class StudentRecordManager {
List <record> list;
JFrame frame;
JComboBox dropdown;
  Connection con;
  Statement st;
  PreparedStatement ps;
  

JPanel INSERT,UPDATE,DELETE,DISPLAY;

	public StudentRecordManager() {
