			Class.forName("oracle.jdbc.driver.OracleDriver");
			con=DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe","DEMODBJAVA","parteek@1234");
			st=con.createStatement();
		}catch(Exception e)
		{
			
		}
		dropdown=new JComboBox(options);
